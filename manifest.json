{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "1.0",
  "description": "Converts the hovered HTML element to Markdown.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Convert HTML to Markdown"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}